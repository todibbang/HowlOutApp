<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.MapsView">
	<ContentView.Content>
		<Grid >
			<Grid.RowDefinitions >
				<RowDefinition Height="40"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="40"/>
			</Grid.RowDefinitions>

			<StackLayout Grid.Row="0" Grid.RowSpan="3" x:Name="mapLayout"></StackLayout>

			<StackLayout Grid.Row="0" x:Name="searchLayout" HeightRequest="40"></StackLayout>
			<!-- <Entry Grid.Row="0" HeightRequest="30" Placeholder="Location..." x:Name="searchEntry" HorizontalOptions="FillAndExpand"/> -->

			<StackLayout Grid.Row="2" x:Name="selectLayout" HeightRequest="40"></StackLayout>
			<!-- <Button Grid.Row="2" HeightRequest="30" Text="Pick Location" x:Name="selectButton" HorizontalOptions="FillAndExpand"/> -->
		</Grid>
	</ContentView.Content>
</ContentView>
