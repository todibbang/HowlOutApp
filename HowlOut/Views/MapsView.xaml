<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.MapsView">
	<ContentView.Content>
		<Grid Padding="0" RowSpacing="0">
			<Grid.RowDefinitions >
				<RowDefinition Height="40"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="50"/>
			</Grid.RowDefinitions>

			<StackLayout Grid.Row="0" Grid.RowSpan="3" x:Name="mapLayout"> </StackLayout>

			<StackLayout Grid.Row="0" x:Name="searchLayout" HeightRequest="40" Padding="0">
				<SearchBar x:Name="searchBar" HeightRequest="40" BackgroundColor="{DynamicResource HowlOutFade}"/>
			</StackLayout>

			<ListView x:Name="searchList" HeightRequest="0" Grid.Row = "1">
			    <ListView.ItemTemplate>
			      <DataTemplate>
			        <TextCell Text="{Binding forslagstekst}" />
			      </DataTemplate>
			    </ListView.ItemTemplate>
			</ListView>
				
			<!-- <Entry Grid.Row="0" HeightRequest="30" Placeholder="Location..." x:Name="searchEntry" HorizontalOptions="FillAndExpand"/> -->

			<StackLayout Grid.Row="2" x:Name="selectLayout" HeightRequest="50" Padding="5"></StackLayout>
			<!-- <Button Grid.Row="2" HeightRequest="30" Text="Pick Location" x:Name="selectButton" HorizontalOptions="FillAndExpand"/> -->
		</Grid>
	</ContentView.Content>
</ContentView>
