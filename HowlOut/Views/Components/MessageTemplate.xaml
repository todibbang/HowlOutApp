<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.MessageTemplate"
		xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">
	<ContentView.Content>
		<Grid Padding="10,2,10,0" RowSpacing="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="auto"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="0"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="15"/>
			</Grid.RowDefinitions>

			<Button Grid.Column="{Binding column}" Grid.Row="1" BorderRadius="15" BackgroundColor="{Binding bgColor}" />
			<StackLayout Grid.Column="{Binding column}" Grid.Row="1" Padding="10">
				<Label Text="{Binding Content}" VerticalTextAlignment="Start" LineBreakMode="WordWrap" VerticalOptions="CenterAndExpand" TextColor="White" FontSize="14"/>
			</StackLayout>
			<Label Grid.Row="2" Grid.ColumnSpan="4" Text="{Binding Time}" FontSize="8" TextColor="{DynamicResource NormalTextColor}" HorizontalOptions="{Binding horizontal}" VerticalOptions="CenterAndExpand"/>

			<controls:CircleImage Grid.Row="1" Grid.Column="0" Source="{Binding ImageSource}" Aspect="AspectFill" VerticalOptions="EndAndExpand" HeightRequest="20" IsVisible="{Binding displayImage}"/> 
			
		</Grid>
	</ContentView.Content>
</ContentView>
