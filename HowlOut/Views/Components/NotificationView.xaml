<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="HowlOut.NotificationView"
		xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">
	<ContentView.Content>
		<Grid RowSpacing="0" ColumnSpacing="0" Padding="10,0,0,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="40" />
				<ColumnDefinition Width="40" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="10" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="80"/>
			</Grid.RowDefinitions>

			<StackLayout Grid.Column="1" Grid.ColumnSpan="3" BackgroundColor="White"/>

			<controls:CircleImage Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" x:Name="image"/>
			
			<StackLayout Grid.Column="2" Grid.Row="0" Padding="10,2,0,5" Spacing="0" VerticalOptions="Fill">
				<Label x:Name="Title" TextColor="{DynamicResource HowlOut}"/>
				<Label x:Name="Message" FontSize="12" TextColor="{DynamicResource NormalTextColor}"/>
				<Label x:Name="time" FontSize="8" TextColor="{DynamicResource NormalTextColor}" VerticalOptions="EndAndExpand"/>
			</StackLayout>

			<Button Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" x:Name="SubjectButton" BackgroundColor="Transparent" />
		</Grid>
	</ContentView.Content>
</ContentView>
