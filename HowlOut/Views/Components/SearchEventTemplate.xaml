<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.SearchEventTemplate"
 			 xmlns:common="clr-namespace:UXDivers.Artina.Player;assembly=UXDivers.Artina.Player.Common"
			 xmlns:local="clr-namespace:HowlOut;assembly=HowlOut"
			 xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">
	<ContentView.Content>
		<Grid RowSpacing="0" ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="100"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="8"/>
				<RowDefinition Height="22"/>
				<RowDefinition Height="14"/>
				<RowDefinition Height="8"/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="4"/>
				<ColumnDefinition Width="40"/>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="16"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="16"/>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="40"/>
				<ColumnDefinition Width="4"/>
			</Grid.ColumnDefinitions>

			<Image Grid.Row="0" Grid.RowSpan="6" Grid.Column="0" Grid.ColumnSpan="9" Source="Party.png" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand"></Image>

			<Image Grid.Row="0" Grid.RowSpan="6" Grid.Column="0" Grid.ColumnSpan="9" Source="gradiant_bg.png" VerticalOptions="StartAndExpand"></Image>

			<BoxView Grid.Row="2" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="9" BackgroundColor="White"></BoxView>

			<Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9" VerticalOptions="Start">
				<Grid.RowDefinitions>
					<RowDefinition Height="5"/>
					<RowDefinition Height="36"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2"/>
					<ColumnDefinition Width="54"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="54"/>
					<ColumnDefinition Width="2"/>
				</Grid.ColumnDefinitions>

					<StackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="0">
						<Label Text="{Binding BigTime}" FontSize="22" TextColor="White" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
						<Label Text="{Binding SmallTime}" FontSize="12" TextColor="White" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
					</StackLayout>

					<Label Grid.Row="1" Grid.Column="2" Style="{DynamicResource TitleStyle}" FontSize="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>

					<StackLayout Grid.Row="1" Grid.Column="3" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="0">
						<Label Text="{Binding Distance}" FontSize="22" TextColor="White" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
						<Label Text="Km" FontSize="12" TextColor="White" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
					</StackLayout>

			</Grid>
			<!-- 
			<StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9" VerticalOptions="CenterAndExpand" Spacing="0" Padding="0">
				
				<StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="0">
					<Label Style="{DynamicResource DistanceStyle}" FontSize="14" HorizontalOptions="Center"></Label>
					<Label Text=" - " FontSize="14" HorizontalOptions="Center" ></Label>
					<Label Style="{DynamicResource TimeStyle}" FontSize="14" HorizontalOptions="Center"></Label>
				</StackLayout> 
			</StackLayout>

			-->

			<controls:CircleImage Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="2" 
				Source="{Binding ProfileImageUri}"/> 
			<Button Grid.Row="1" Grid.RowSpan="3" Grid.Column="6" Grid.ColumnSpan="2"
				Style="{DynamicResource AttendingButtonStyle}" BorderRadius="30" BorderWidth="5" FontSize="14"></Button> 
			
			<Button Grid.Row="3" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2" 
				Style="{DynamicResource LikesButtonStyle}" BorderRadius="18" BorderWidth="3"></Button> 
			<Button Grid.Row="3" Grid.RowSpan="2" Grid.Column="5" Grid.ColumnSpan="2" 
				Style="{DynamicResource LoyaltyButtonStyle}" BorderRadius="18" BorderWidth="3"></Button> 

			<ContentView Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="4" Content="{Binding ProfileContent}" />
			<ContentView Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="4" Content="{Binding GroupContent}" />

			<StackLayout Grid.Row="3" Grid.RowSpan="2" Grid.Column="4" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
				<Button Style="{DynamicResource SmallTypeButtonStyle}" Text="{Binding EventType1}" x:Name="eventType1"></Button>
				<Button Style="{DynamicResource SmallTypeButtonStyle}" Text="{Binding EventType2}" IsVisible="{Binding EventType2Visible}" x:Name="eventType2"></Button>
				<Button Style="{DynamicResource SmallTypeButtonStyle}" Text="{Binding EventType3}" IsVisible="{Binding EventType3Visible}" x:Name="eventType3"></Button>
			</StackLayout>

		</Grid>
	</ContentView.Content>
</ContentView>
