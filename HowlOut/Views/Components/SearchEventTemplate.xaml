<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.SearchEventTemplate"
 			 xmlns:common="clr-namespace:UXDivers.Artina.Player;assembly=UXDivers.Artina.Player.Common"
			 xmlns:local="clr-namespace:HowlOut;assembly=HowlOut"
			 xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">
	<ContentView.Content>
		<Grid RowSpacing="0" ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="52"/>
				<RowDefinition Height="80"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="8"/>
				<RowDefinition Height="22"/>
				<RowDefinition Height="8"/>
				<RowDefinition Height="6"/>
				<RowDefinition Height="8"/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="4"/>
				<ColumnDefinition Width="40"/>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="16"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="16"/>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="40"/>
				<ColumnDefinition Width="4"/>
			</Grid.ColumnDefinitions>

			<Image Grid.Row="0" Grid.RowSpan="8" Grid.Column="0" Grid.ColumnSpan="9" Source="Party.png"></Image>
			<BoxView Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="9" BackgroundColor="White"></BoxView>
			<BoxView Grid.Row="3" Grid.RowSpan="5" Grid.Column="0" Grid.ColumnSpan="9" BackgroundColor="White"></BoxView>

			<StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9" VerticalOptions="CenterAndExpand" Spacing="0" Padding="0">
				<Label Style="{DynamicResource TitleStyle}" FontSize="20" HorizontalOptions="Center"/>
				<StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="0">
					<Label Style="{DynamicResource DistanceStyle}" FontSize="14" HorizontalOptions="Center"></Label>
					<Label Text=" - " FontSize="14" HorizontalOptions="Center" ></Label>
					<Label Style="{DynamicResource TimeStyle}" FontSize="14" HorizontalOptions="Center"></Label>
				</StackLayout>
			</StackLayout>

			<controls:CircleImage Grid.Row="2" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="2" 
				Source="{Binding ProfileImageUri}"/> 
			<Button Grid.Row="2" Grid.RowSpan="3" Grid.Column="6" Grid.ColumnSpan="2"
				Style="{DynamicResource AttendingButtonStyle}" BorderRadius="30" BorderWidth="5"></Button> 
			
			<Button Grid.Row="4" Grid.RowSpan="3" Grid.Column="2" Grid.ColumnSpan="2" 
				Style="{DynamicResource LikesButtonStyle}" BorderRadius="18" BorderWidth="3"></Button> 
			<Button Grid.Row="4" Grid.RowSpan="3" Grid.Column="5" Grid.ColumnSpan="2" 
				Style="{DynamicResource LoyaltyButtonStyle}" BorderRadius="18" BorderWidth="3"></Button> 

			<StackLayout Grid.Row="4" Grid.RowSpan="3" Grid.Column="4" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
				<Button Text="1" Style="{DynamicResource ButtonStyle}" WidthRequest="36" BorderRadius="18"></Button>
				<Button Text="2" Style="{DynamicResource ButtonStyle}" WidthRequest="36" BorderRadius="18"></Button>
				<Button Text="3" Style="{DynamicResource ButtonStyle}" WidthRequest="36" BorderRadius="18"></Button>
			</StackLayout>
		</Grid>
	</ContentView.Content>
</ContentView>
