<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 	BackgroundColor="#FF000000" xmlns="http://xamarin.com/schemas/2014/forms" Padding = "0,20,0,0" 
				xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.SignIn">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical">
      <RelativeLayout x:Name="EventImageLayout">

        <StackLayout
          RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.20}">
          <Label Text="Welcome" FontAttributes="Bold" FontSize="52" HorizontalOptions="Center" TextColor="Gray"/>
          <Label Text = "Login to Howl Out" FontSize="Small" HorizontalOptions="Center" TextColor="Gray" />
        </StackLayout>

        <StackLayout
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.25}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.85}">
          <Button x:Name="fblogin" Clicked="fb_click" Text="Login With Facebook" TextColor = "White" BackgroundColor="#3b5998" HorizontalOptions="FillAndExpand" WidthRequest="200" VerticalOptions="CenterAndExpand"/>
        </StackLayout>

      </RelativeLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>