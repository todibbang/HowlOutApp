<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.CoreView"
			 xmlns:common="clr-namespace:UXDivers.Artina.Player;assembly=UXDivers.Artina.Player.Common" BackgroundColor="{DynamicResource HowlOutBackGround}"
			 xmlns:local="clr-namespace:HowlOut;assembly=HowlOut">
	<ContentPage.Content>
		<Grid RowSpacing="0" ColumnSpacing="0">
			<Grid.Padding>
				<OnPlatform x:TypeArguments="Thickness"
                	iOS="0, 0, 0, 0" />
			</Grid.Padding>

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="60"/>
			</Grid.RowDefinitions>

			<StackLayout Grid.Row="0" BackgroundColor="{DynamicResource HowlOut}" Padding="5,5,5,5"  x:Name="topBarLayout">
				<StackLayout.Padding>
					<OnPlatform x:TypeArguments="Thickness"
	                	iOS="5, 25, 5, 5" />
				</StackLayout.Padding>
				<!-- <local:TopBar/> -->
			</StackLayout>

			<ContentView Grid.Row="1" x:Name="mainView" BackgroundColor="{DynamicResource HowlOutBackground}">
			</ContentView>

			 <StackLayout Grid.Row="2" Padding="0,0,0,2" BackgroundColor="White">
				<local:BottomBar/> 
			</StackLayout>

			<ActivityIndicator x:Name="loading" Grid.Row="0" Grid.RowSpan="3" BackgroundColor="{DynamicResource HowlOut}" Color="White" IsRunning="true"/>

		</Grid>
	</ContentPage.Content>
</ContentPage>
