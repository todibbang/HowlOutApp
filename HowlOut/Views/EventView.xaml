<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.EventView"
			 xmlns:common="clr-namespace:UXDivers.Artina.Player;assembly=UXDivers.Artina.Player.Common" BackgroundColor="{DynamicResource HowlOutBackground}"
			 xmlns:local="clr-namespace:HowlOut;assembly=HowlOut">
	<ContentView.Content>
		<Grid RowSpacing="0" ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="60"/>
				<RowDefinition Height="20"/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="60"/>
				<ColumnDefinition Width="20"/>
			</Grid.ColumnDefinitions>

			<StackLayout BackgroundColor="White" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0">
				<Grid RowSpacing="0" ColumnSpacing="0" Padding="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="1"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="1"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="1"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="39"/>
						<RowDefinition Height="1"/>
					</Grid.RowDefinitions>
					<Button Grid.Column="0" Grid.Row="0" x:Name="SearchButton" Text="Search" TextColor="{DynamicResource TextColor}" FontSize="14" />
					<BoxView Grid.Column="1" Grid.Row="0" BackgroundColor="{DynamicResource HowlOut}"></BoxView>
					<Button Grid.Column="2" Grid.Row="0" x:Name="ManageButton" Text="Attended" TextColor="{DynamicResource TextColor}" FontSize="14"/>
					<BoxView Grid.Column="3" Grid.Row="0" BackgroundColor="{DynamicResource HowlOut}"></BoxView>
					<Button Grid.Column="4" Grid.Row="0" x:Name="YoursButton" Text="Yours" TextColor="{DynamicResource TextColor}" FontSize="14"/>
					<BoxView Grid.Column="5" Grid.Row="0" BackgroundColor="{DynamicResource HowlOut}"></BoxView>
					<Button Grid.Column="6" Grid.Row="0" x:Name="InviteButton" Text="Invited To" TextColor="{DynamicResource TextColor}" FontSize="14"/>
					<local:Line Grid.Column="0" Grid.ColumnSpan="7" Grid.Row="1" />
				</Grid>
			</StackLayout>

			<ScrollView Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="3" Orientation="Vertical" VerticalOptions="FillAndExpand">
				<StackLayout Spacing="0" Padding="0">

					<ListView x:Name="SearchEventList" 
			  			HasUnevenRows="false"
						RowHeight="226"
						SeparatorVisibility="None"
						CachingStrategy="RecycleElement"
						BackgroundColor="Transparent">
						<ListView.ItemTemplate>
							<DataTemplate>
								<ViewCell>
									<local:SearchEventTemplate/> 
								</ViewCell>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>

					<ListView x:Name="ManageEventList" 
			  			HasUnevenRows="false"
						RowHeight="108"
						SeparatorVisibility="None"
						CachingStrategy="RecycleElement"
						BackgroundColor="Transparent"
						IsVisible="false">
						<ListView.ItemTemplate>
							<DataTemplate>
								<ViewCell>
									<local:ManageEventTemplate/> 
								</ViewCell>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>

					<ListView x:Name="YourEventList" 
			  			HasUnevenRows="false"
						RowHeight="108"
						SeparatorVisibility="None"
						CachingStrategy="RecycleElement"
						BackgroundColor="Transparent"
						IsVisible="false">
						<ListView.ItemTemplate>
							<DataTemplate>
								<ViewCell>
									<local:ManageEventTemplate/> 
								</ViewCell>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>

					<ListView x:Name="InviteEventList" 
			  			HasUnevenRows="false"
						RowHeight="108"
						SeparatorVisibility="None"
						CachingStrategy="RecycleElement"
						BackgroundColor="Transparent"
						IsVisible="false">
						<ListView.ItemTemplate>
							<DataTemplate>
								<ViewCell>
									<local:ManageEventTemplate/> 
								</ViewCell>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</StackLayout>
			</ScrollView>

			<Button Grid.Row="2" Grid.Column="1" x:Name="CreateButton" BackgroundColor="White" BorderRadius="30" BorderWidth="1" BorderColor="{DynamicResource HowlOut}" ></Button> 
			<Image Grid.Row="2" Grid.Column="1" WidthRequest="30" Source = "ic_search.png" x:Name="CreateImage" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Image>

		</Grid>
	</ContentView.Content>
</ContentView>
