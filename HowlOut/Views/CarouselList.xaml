<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.CarouselList"
		xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView">
	<ContentView.Content>
		<Grid RowSpacing="0" ColumnSpacing="0"  x:Name="contentTest" Padding="0,0,0,0" BackgroundColor="{DynamicResource HowlOutBackground}">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<cv:CarouselView Grid.RowSpan="2" x:Name="carousel" HeightRequest="300">
			    <cv:CarouselView.ItemTemplate>
			      <DataTemplate>
			        <ContentView Content="{Binding content}"/>
			      </DataTemplate>
			    </cv:CarouselView.ItemTemplate>
			</cv:CarouselView>

			<StackLayout Grid.Row="1" BackgroundColor="Transparent" Padding="0,0,0,62">
				<Grid Padding="0" VerticalOptions ="CenterAndExpand" HorizontalOptions="Fill" x:Name="optionGrid" HeightRequest="30" BackgroundColor="Transparent"/>
			</StackLayout>
		</Grid> 
	</ContentView.Content>
</ContentView>
