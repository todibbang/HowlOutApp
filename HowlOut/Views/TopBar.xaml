<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HowlOut.TopBar">
	<ContentView.Content>
		<Grid HeightRequest="40">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="75"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Style="{DynamicResource ButtonStyle}" x:Name="back" BackgroundColor="{DynamicResource HowlOut}" ></Button>
			<Image Grid.Column="0" x:Name="backBtn" Source="ic_chevron_left.png" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Image>
			<Image Grid.Column="1" Source="howlouticongrown.png" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Image>
			<Button Grid.Column="1" BackgroundColor="Transparent" x:Name="howlOut" />
			<Button Grid.Column="2" Text="Update" Style="{DynamicResource ButtonStyle}" x:Name="updateButton" BorderWidth="1" BorderColor="White" BackgroundColor="{DynamicResource HowlOut}" TextColor="White"></Button>
		</Grid>
	</ContentView.Content>
</ContentView>
